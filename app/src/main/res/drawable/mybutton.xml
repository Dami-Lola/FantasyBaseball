<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00695C" />
            <gradient android:angle="-90" android:startColor="#009688" android:endColor="#80CBC4" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#006064" />
            <solid android:color="#004D40"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00695C" />
            <gradient android:angle="-90" android:startColor="#00695C" android:endColor="#004D40" />
        </shape>
    </item>
</selector>